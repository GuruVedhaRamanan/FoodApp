<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgs"
    tools:context="com.example.android.foodie.MainActivity">
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textslogan"
        android:layout_width="200dp"
        android:textSize="19sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:text="@string/our_slogan"
        android:layout_height="wrap_content" />

</LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_alignParentBottom="true">

   <info.hoang8f.widget.FButton
    android:id="@+id/SignUpButn"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/signup"
    android:layout_margin="8dp"
       android:textSize="18sp"
       android:textStyle="bold"
       app:buttonColor="@color/butncolor"
    android:textColor="@android:color/white"
    app:shadowColor="@android:color/black"
    app:shadowEnabled="true"
    app:shadowHeight="5dp"
    app:cornerRadius="4dp" />


    <info.hoang8f.widget.FButton
            android:id="@+id/SignInButn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/login"
             android:textSize="18sp"
             android:textStyle="bold"
            android:layout_margin="8dp"
            app:buttonColor="@color/fbutton_color_wet_asphalt"
            android:textColor="@android:color/white"
            app:shadowColor="@android:color/black"
            app:shadowEnabled="true"
            app:shadowHeight="5dp"
            app:cornerRadius="4dp" />

    </LinearLayout>
</RelativeLayout>
